<div class="overlap-panels">
	<div class="overlap-panels__bg-blue"></div>
	<div class="overlap-panels__img">
		<img class="img" src="<%= domain %>/img/game_dev.jpg" alt="">
	</div>
	<div class="overlap-panels__contents">
		<div class="box">
			<div class="box__contents--pd">
				<div class="box__title">
					<p class="text-en">Game development</p>
					<h2 class="text-jp">ゲーム開発</h2>
				</div>
