	]
	%>
	<h2 class="info__label">
		<span class="info__label-text">News</span>
	</h2>
	<dl class="info__list">

		<% infoList.forEach(element => { %>
		<div class="info__list-item">
			<dt class="info__item--date"><span><%= element.date %></span></dt>
			<dd class="info__item">
				<% // url が定義されているときだけリンク %>
				<% if(element.url == null){ %>
				<%= element.title %>
				<% } else { %>
				<a href="<%= element.url %>">
